<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
    <title>AddBlog Page</title>
    <link href="../uploads/style.css" rel="stylesheet">
</head>

<body>
  <%- include("./partials/nav") %>

    <div class="container mt-5 pt-5 addDataFormMearginTop" style="min-height: 74.5vh;">
      <form action="/addData" method="post" enctype="multipart/form-data" id="form">
        <h1>Add Blog</h1>
        <div class="mb-3">
          <label for="title" class="form-label">Blog_Title</label>
          <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp">

        </div>
        <div class="mb-3">
          <label for="blogerName" class="form-label">BlogerName</label>
          <input type="text" class="form-control" id="blogerName" name="blogerName">
        </div>

        <div class="mb-3">
          <label for="body" class="form-label">Body</label>
          <textarea class="form-control" id="body" name="body"></textarea>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input type="file" class="form-control" id="image" name="image">
        </div> -->
        <div class="mb-3">
          <label for="video" class="form-label">Video</label>
          <input type="file" class="form-control" id="video" name="video" accept="video/*">
        </div>

        <button type="submit" class="btn btn-dark mt-4">Submit</button>
      </form>
    </div>



    <%- include("./partials/script") %>
</body>

</html>